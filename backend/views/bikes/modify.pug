extends ../layout

block content
    .container
        .row.justify-content-center
            .col-md-6.mt-4
                a(href='/bikes').btn.btn-secondary Volver
                br
                h1 Update
                br
                //pre #{JSON.stringify(bike, null, 2)}
                form(action=`/bikes/modify/${bike.id}` method='post')
                    .form-group
                        label(for='id') ID:
                        input(type='text' id='id' name='id' class='form-control' value=bike.id)
                    .form-group
                        label(for='color') Color:
                        input(type='text' id='color' name='color' class='form-control' value=bike.color)
                    .form-group
                        label(for='model') Model:
                        input(type='text' id='model' name='model' class='form-control' value=bike.model)
                    .form-group
                        label(for='lat') Lat:
                        input(type='text' id='lat' name='lat' class='form-control' value=bike.location[0])
                    .form-group
                        label(for='lng') Lng:
                        input(type='text' id='lng' name='lng' class='form-control' value=bike.location[1])
                    button(type='submit' class='btn btn-primary').mt-3 Modify
